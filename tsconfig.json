{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": [
      "dom",
      "esnext"
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["src/types/*ts", "node_modules", ".vscode"]
}
